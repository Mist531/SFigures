<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kvadrat">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/black"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Введите известные данные:"
                android:textSize="28dp"
                android:textColor="@color/white"/>


        </LinearLayout>
        <ScrollView
            android:layout_weight="0.5"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="a="
                        android:textColor="@color/white"
                        android:textSize="70dp"/>
                    <EditText
                        android:digits="0123456789."
                        android:textColor="@color/white"
                        android:textSize="40dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/kvadrat_storonakv"
                        android:layout_width="280dp"
                        android:layout_height="60dp"
                        android:background="@drawable/okant_white"/>
                </LinearLayout>

                <TextView
                    android:layout_marginEnd="110dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сторона квадрата"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="d="
                        android:textColor="@color/white"
                        android:textSize="70dp"/>
                    <EditText
                        android:digits="0123456789."
                        android:textColor="@color/white"
                        android:textSize="40dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/kvadrat_diagonal"
                        android:layout_width="280dp"
                        android:layout_height="60dp"
                        android:background="@drawable/okant_white"/>
                </LinearLayout>
                <TextView
                    android:layout_marginEnd="145dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Диагональ"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:onClick="back"
                android:paddingHorizontal="10dp"
                android:background="@drawable/okant_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Назад"
                android:textColor="@color/white"
                android:textSize="50dp"/>
            <TextView
                android:onClick="dalee"
                android:layout_marginStart="40dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/okant_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Далее"
                android:textColor="@color/white"
                android:textSize="50dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>